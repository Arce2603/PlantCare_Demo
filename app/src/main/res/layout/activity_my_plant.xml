<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back"
    android:layout_height="match_parent"
    tools:context=".myPlant">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="@string/mi_planta"
        android:textColor="@color/font"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="296dp"
        android:layout_height="336dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:background="#a2d6a7" />

    <ProgressBar
        android:id="@+id/pb_wellness"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="308dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp" />

    <ImageView
        android:id="@+id/iv_plant"
        android:layout_width="267dp"
        android:layout_height="352dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/flor2" />

    <ImageView
        android:id="@+id/iv_sad"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignStart="@+id/pb_wellness"
        android:layout_below="@+id/pb_wellness"
        android:layout_marginTop="-47dp"
        app:srcCompat="@drawable/ic_bad" />

    <ImageView
        android:id="@+id/iv_smile"
        android:layout_width="46dp"
        android:layout_height="56dp"
        android:layout_alignEnd="@+id/pb_wellness"
        android:layout_below="@+id/pb_wellness"
        android:layout_marginTop="-47dp"
        app:srcCompat="@drawable/ic_good" />

    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:text="."
        android:textColor="@color/font" />

    <TextView
        android:id="@+id/tv_luz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/iv_plant"
        android:text=" "
        android:textColor="@color/font" />

    <TextView
        android:id="@+id/tv_hum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:text="."
        android:textColor="@color/font" />

</RelativeLayout>